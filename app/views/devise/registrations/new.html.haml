.resistrations
  = link_to image_tag("/images/miyako.logo.png", width: "100", height: "100", class: "resistrations__logo"), root_path 
  .resistration
    %h2 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :名前, class: "label"
        -# %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "input__resistration"
      .field
        = f.label :Eメール, class: "label"
        -# %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input__resistration"
      .field
        = f.label :パスワード, class: "label"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        -# %br/
        = f.password_field :password, autocomplete: "new-password", class: "input__resistration"
      .field
        = f.label :パスワード確認, class: "label"
        -# %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input__resistration"
      .actions
        = f.submit "  登  録  "
    = render "devise/shared/links"
